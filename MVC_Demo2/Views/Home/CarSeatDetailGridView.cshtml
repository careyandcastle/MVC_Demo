@model MVC_Demo2.Models.MvcDemoModel.車位資料檔

@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CarSeatDetailGridView</title>
</head>
<body>

<div>
    <h4>車位資料檔</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.車位大小編號)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.車位大小編號)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.車位種類編號)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.車位種類編號)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.每月租金)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.每月租金)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.修改人)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.修改人)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.修改時間)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.修改時間)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("修改_detail !", "EditCarSeatDataGridview", new
{
    //0526 16:10 講解: Details範本(CarSeatGridView.cshtml是由此創造)，是使用Model.事業(因為CarSeatList所選的一筆資料，所以直接用Model取值)，這裡的Model就是在CarSeatList所select的項目
    //                 List   範本(    CarSeatList.cshtml是由此創造)，是使用item.事業(因為CarSeatList的一整個清單，所以要用item去選)
    事業 = Model.事業,
    單位 = Model.單位,
    部門 = Model.部門,
    分部 = Model.分部,
    建物編號 = Model.建物編號,
    樓層 = Model.樓層,
    車位編號 = Model.車位編號,
    @*model是從view(detail)傳過來的*@
}) |
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>
